{
  "version": 2,
  "builds": [
    {
      "src": "src/backend/server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "src/frontend/**",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/backend/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "src/frontend",
      "continue": true
    }
  ]
}
